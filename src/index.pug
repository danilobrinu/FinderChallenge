        aside.pure-u-1-5
          h2 Búsquedas guardadas
          ul.pure-menu-list.queries

          h2 Categorías
          ul.pure-menu-list.categories

          h2 Idiomas
          ul.pure-menu-list.languages

          h2 Publicación
          ul.pure-menu-list.publication

          h2 Presentación
          ul.pure-menu-list.presentation
        section.pure-u-4-5
          .content.pure-g

    //- third party libraries
    script(src="/vendor/lodash/dist/lodash.min.js")
    script(src="/vendor/awesomplete/awesomplete.min.js")

    //- app scripts self
    script(src="/scripts/global.js")
    script(src="/scripts/search-form.js")
    script(src="/scripts/constants.js")
    script(src="/scripts/utils.js")
    script(src="/scripts/reducers.js")
    script(src="/scripts/stores.js")
    script(src="/scripts/actions.js")
    script(src="/scripts/components.js")
    script(src="/scripts/app.js")
